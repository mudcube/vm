{
	"$schema": "./vm.schema.json",
	"provider": "docker",
	"project": {
		"name": "vm",
		"hostname": "dev.vm.local",
		"workspace_path": "/workspace",
		"env_template_path": null,
		"backup_pattern": "*backup*.sql.gz"
	},
	"vm": {
		"box": "bento/ubuntu-24.04",
		"memory": 6144,
		"cpus": 4,
		"user": "vagrant",
		"port_binding": "127.0.0.1",
		"timezone": "America/Los_Angeles"
	},
	"versions": {
		"node": "22",
		"nvm": "v0.40.3",
		"yarn": "4.9.2",
		"pnpm": "10.12.3",
		"npm": "latest"
	},
	"ports": {},
	"services": {
		"postgresql": {
			"enabled": false,
			"database": "vm_dev",
			"user": "postgres",
			"password": "postgres",
			"port": 3005
		},
		"redis": {
			"enabled": false,
			"port": 3006
		},
		"mongodb": {
			"enabled": false,
			"port": 3007
		},
		"docker": {
			"enabled": false
		},
		"headless_browser": {
			"enabled": false,
			"display": ":99",
			"executable_path": "/usr/bin/chromium-browser"
		}
	},
	"npm_packages": ["@anthropic-ai/claude-code", "@google/gemini-cli", "npm-check-updates", "prettier", "eslint"],
	"aliases": {
		"claudeyolo": "claude --dangerously-skip-permissions",
		"geminiyolo": "GEMINI_API_KEY=${GEMINI_API_KEY:-} gemini"
	},
	"environment": {
		"NODE_ENV": "development",
		"DISPLAY": ":99"
	},
	"terminal": {
		"emoji": "ðŸš€",
		"username": "vm-dev",
		"show_git_branch": true,
		"show_timestamp": false,
		"theme": "dracula"
	},
	"claude_sync": true,
	"gemini_sync": true,
	"persist_databases": false
}
