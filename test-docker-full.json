{
  "$schema": "./vm.schema.json",
  "provider": "docker",
  "project": {
    "name": "test-docker-full",
    "hostname": "test-docker-full.local",
    "workspace_path": "/workspace"
  },
  "vm": {
    "memory": 4096,
    "cpus": 4
  },
  "services": {
    "audio": {
      "enabled": true,
      "driver": "pulse",
      "share_microphone": false
    },
    "gpu": {
      "enabled": true,
      "type": "auto",
      "memory_mb": 512
    },
    "docker": {
      "enabled": true,
      "buildx": true
    }
  },
  "ports": {
    "web": 3000,
    "api": 3001
  }
}