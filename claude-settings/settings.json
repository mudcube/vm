{
	"allow": [
		"Read(/workspace/**)",
		"Write(/workspace/**)",
		"Edit(/workspace/**)",
		"MultiEdit(/workspace/**)",
		"Bash",
		"WebSearch",
		"WebFetch",
		"Grep(/workspace/**)",
		"Glob(/workspace/**)",
		"LS(/workspace/**)"
	],
	"deny": [
		"Read(**/.env*)",
		"Read(**/secrets/**)",
		"Read(**/*.key)",
		"Read(**/*.pem)",
		"Read(**/private/**)",
		"Write(**/.env*)",
		"Edit(**/.env*)",
		"Bash(sudo *)",
		"Bash(su *)",
		"Bash(rm -rf *)",
		"Bash(rm -r *)",
		"Bash(chmod +x /usr/bin/*)",
		"Bash(systemctl *)",
		"Bash(service *)",
		"Bash(apt-get *)",
		"Bash(apt *)",
		"Bash(yum *)",
		"Bash(iptables *)",
		"Bash(ufw *)",
		"Bash(passwd *)",
		"Bash(usermod *)",
		"Bash(useradd *)",
		"Bash(groupadd *)",
		"Bash(chown root *)",
		"Bash(kill -9 *)",
		"Bash(pkill *)",
		"Bash(reboot)",
		"Bash(shutdown *)",
		"Bash(init *)",
		"Bash(mount *)",
		"Bash(umount *)",
		"Bash(mkfs *)",
		"Bash(dd if=*)",
		"Bash(wget -O /usr/*)",
		"Bash(curl -o /usr/*)"
	],
	"includeCoAuthoredBy": true,
	"cleanupPeriodDays": 30,
	"env": {
		"ANTHROPIC_MODEL": "claude-3-7-sonnet-20250219",
		"DISABLE_ERROR_REPORTING": "false",
		"DISABLE_TELEMETRY": "false",
		"CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "false",
		"BASH_DEFAULT_TIMEOUT_MS": "30000",
		"MCP_TOOL_TIMEOUT": "300000"
	}
}